<% include ../partials/header %>

<h1>Add a new story</h1>
<div class="row">
  <form class="col s12" action="/stories" method="post">
    <div class="row">
      <div class="input-field">
        <input type="text" name="title">
        <label for="title">Title</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <select name="status">
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          <option value="unpublished">Unpublished</option>
        </select>
        <label for="status">Status</label>
      </div>
    </div>

    <div class="row">
      <p>
        <input type="checkbox" name="comments" class="filled-in" id="filled-in-box" checked="checked">
        <label for="filled-in-box">Allow comments</label>
      </p>
    </div>

    <div class="row">
      <div class="input-field">
        <h5>Your story goes here</h5>
        <textarea name="body"></textarea>
      </div>
    </div>

    <input type="submit" value="Save" class="btn">
  </form>
</div>

<% include ../partials/footer %>
