            <%}else{%>
              <li>
              <a class="btn red darken-1" href="/auth/google"><i class="fa fa-google left"></i>Login With Google</a>
              </li>
            <%}%>
            <li>
              <a href="/stories"><i class="fa fa-book"></i>Public Stories</a>
            </li>
            <li class="divider"></li>
            <%if(user){%>
              <li>
                <a href="/dashboard"><i class="fa fa-cog"></i>Dashboard</a>
              </li>
              <li>
                <a href="/stories/my"><i class="fa fa-user"></i>My Stories</a>
              </li>
              <li>
                <a href="/logout"><i class="fa fa-sign-out"></i>LogOut</a>
